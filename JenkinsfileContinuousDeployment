
pipeline {
    agent any

    tools {
        jdk 'JDK21'  // Usa exactamente el nombre configurado en Jenkins
    }

    environment {
        DOCKER_IMAGE = 'ecovimil/app'
        STAGING_ENV = 'staging'
        PROD_ENV = 'production'
    }

    stages {
        stage('Clonar Repositorio') {
            steps {
                git branch: 'main', url: 'https://github.com/Estrella-ticona/dise-o_backend'
            }
        }

        stage('Compilación y Construcción') {
            steps {
                bat 'mvn clean install'
            }
        }

        stage('Pruebas Unitarias') {
            steps {
                bat 'mvn test'
            }
        }

        stage('Pruebas de Integración') {
            steps {
                // Reemplaza con script .bat o usa PowerShell si estás en Windows
                bat 'run_integration_tests.bat'
            }
        }

        stage('Despliegue a Staging') {
            steps {
                bat 'docker build -t %DOCKER_IMAGE%:%BUILD_NUMBER% .'
                bat 'docker run -d --name eco-movil-staging %DOCKER_IMAGE%:%BUILD_NUMBER%'
            }
        }

        stage('Pruebas en Staging') {
            steps {
                bat 'run_staging_tests.bat'
            }
        }

        stage('Despliegue a Producción') {
            steps {
                bat 'docker tag %DOCKER_IMAGE%:%BUILD_NUMBER% %DOCKER_IMAGE%:latest'
                bat 'docker push %DOCKER_IMAGE%:latest'
                bat 'docker run -d --name eco-movil-prod %DOCKER_IMAGE%:latest'
            }
        }

        stage('Monitoreo Post-Despliegue') {
            steps {
                bat 'monitor_production.bat'
            }
        }
    }
}