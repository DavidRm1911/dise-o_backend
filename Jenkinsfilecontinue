ipeline {
    agent any

    tools {
        jdk 'JDK_21'  // Usa exactamente el nombre configurado en Jenkins
    }

    environment {
        // Aquí ya no es necesario usar variables relacionadas con Docker
        STAGING_ENV = 'staging'
        PROD_ENV = 'production'
    }

    stages {
        

        stage('Compilación y Construcción') {
            steps {
                echo 'Compilando el proyecto con Maven...'
                bat 'mvn clean install'
            }
        }

        stage('Pruebas Unitarias') {
            steps {
                echo 'Ejecutando pruebas unitarias...'
                bat 'mvn test'
            }
        }

        stage('Pruebas de Integración') {
            steps {
                echo 'Ejecutando pruebas de integración...'
                bat 'run_integration_tests.bat'
            }
        }

        

        stage('Pruebas en Staging') {
            steps {
                echo 'Ejecutando pruebas en el entorno de Staging...'
                bat 'run_staging_tests.bat'
            }
        }

       
        stage('Monitoreo Post-Despliegue') {
            steps {
                echo 'Ejecutando monitoreo post-despliegue...'
                bat 'monitor_production.bat'
            }
        }
    }

    post {
        always {
            echo 'El pipeline ha finalizado.'
        }
        success {
            echo '¡El despliegue fue exitoso!'
        }
        failure {
            echo 'Hubo un error en el despliegue.'
        }
    }
}